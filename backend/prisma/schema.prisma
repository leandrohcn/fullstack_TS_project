generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

enum Role {
  ADMIN
  Usuario
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String?
  preco       Float
  donoId      Int?
  dono        Usuario? @relation(fields: [donoId], references: [id])
  reservadoEm DateTime?
}

model Usuario {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  senha       String  
  role        Role     @default(Usuario)
  produtos    Produto[]
  createdAt   DateTime @default(now())
}
